{
    "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "warn",
                "noThenProperty": "off",
                "noAssignInExpressions": "off",
                "noPrototypeBuiltins": "off"
            },
            "performance": {
                "noDelete": "off"
            },
            "security": {
                "noDangerouslySetInnerHtml": "off"
            },
            "complexity": {
                "useLiteralKeys": "off",
                "noUselessFragments": "off",
                "noStaticOnlyClass": "off",
                "noBannedTypes": "off",
                "noForEach": "off"
            },
            "correctness": {
                "useExhaustiveDependencies": "off",
                "noChildrenProp": "off",
                "noConstAssign": "error",
                "noUnreachable": "error",
                "useHookAtTopLevel": "warn",
                "noVoidTypeReturn": "warn"
            },
            "style": {
                "noUnusedTemplateLiteral": "off",
                "useDefaultParameterLast": "off",
                "noNonNullAssertion": "off",
                "noVar": "error",
                "useConst": "error",
                "useExponentiationOperator": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 100,
        "lineEnding": "lf",
        "ignore": []
    },
    "javascript": {
        "formatter": {
            "jsxQuoteStyle": "single",
            "quoteStyle": "single",
            "attributePosition": "auto",
            "bracketSameLine": true,
            "semicolons": "asNeeded"
        }
    }
}